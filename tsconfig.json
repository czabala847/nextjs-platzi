{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./",
    "paths": {
      "@database" : ["database/db.ts"],
      "@components/*" : ["components/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "components/Footer/index.jsx", "store/AppProvider.jsx", "components/Header/HeaderModal.jsx", "components/Header/index.jsx", "components/ProductItem/index.jsx", "components/ProductSummary/index.jsx", "components/ProductSummary/ProductAttributes.jsx", "pages/yes-or-no/yes-or-no.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
